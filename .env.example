# App Configuration
APP_NAME=BaseApi
APP_ENV=local
APP_DEBUG=true
APP_URL=http://127.0.0.1:8000
APP_HOST=127.0.0.1
APP_PORT=8000

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database Configuration (optional)
DB_DRIVER=sqlite # or mysql
DB_NAME=database.sqlite # for sqlite

# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_NAME=baseapi
# DB_USER=root
# DB_PASSWORD=

# Amadeus API Configuration
AMADEUS_CLIENT_ID=your_amadeus_client_id
AMADEUS_CLIENT_SECRET=your_amadeus_client_secret
AMADEUS_ENV=test  # or 'prod' for production

# Import Configuration
IMPORT_CITIES=BER,PAR,MUC,NYC,LON
IMPORT_CHECKIN_DAYS=14,30
IMPORT_MAX_HOTELIDS_PER_CALL=50
IMPORT_RATINGS=true

# Rate Limiting
IMPORT_DELAY_MS=100
IMPORT_MAX_RETRIES=3
IMPORT_BACKOFF_MULTIPLIER=2

