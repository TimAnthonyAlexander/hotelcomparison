{
    "name": "baseapi/baseapi-template",
    "description": "Project template for BaseAPI - a tiny, KISS-first PHP 8.4 framework",
    "type": "project",
    "license": "MIT",
    "keywords": [
        "baseapi",
        "template",
        "skeleton",
        "php",
        "api"
    ],
    "authors": [
        {
            "name": "Tim Anthony Alexander",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.4",
        "baseapi/baseapi": "v0.3.13"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.12"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "serve": "php bin/console serve",
        "phpstan": "phpstan analyse --memory-limit=256M",
        "post-create-project-cmd": [
            "@php -r \"copy('.env.example', '.env');\"",
            "@php -r \"if (!is_dir('storage')) mkdir('storage', 0755, true);\"",
            "@php -r \"if (!is_dir('storage/ratelimits')) mkdir('storage/ratelimits', 0755, true);\""
        ],
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
